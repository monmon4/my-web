<% if @slide != nil 
  dest = [@slide.document, @slide, @slide.comments.new]
else if @document != nil
  dest = [@document, @slide, @document.comments.new]
  end
  end%>

<%= form_for dest do |f| %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>
  
  <div class="actions">
    <%= f.submit 'comment'  %>
  </div>
<% end %>
